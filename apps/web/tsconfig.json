{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./src", 
    "paths": {
      "@/*": ["*"]
    },
    "resolveJsonModule": true,
    "typeRoots": ["./@types", "node_modules/@types"]
  },
  "include": ["src"]
}
